<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="book_copy_view_form">
            <field name="name">book.copy.view.form</field>
            <field name="model">library.book.copy</field>
            <field name="arch" type="xml">
                <form string="Book Copy Form">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="book_id"/>
                                <field name="active"/>
                                <field name="internal_reference"/>
                                <field name="description"/>
                                <field name="genre"/>

                            </group>
                            <group>
                                <field name="edition_year"/>
                                <field name="isbn"/>
                                <field name="authors"/>
                                <field name="editors"/>
                                <field name="publisher"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                            <page string="Rentals">
                                <field name="rental_ids">
                                    <tree string="Rental List" editable="bottom">
                                        <field name="book_id" invisible="1"/>
                                        <field name="customer_id"/>
                                        <field name="rental_date_start"/>
                                        <field name="rental_date_end"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="book_copy_view_list">
            <field name="name">book.copy.view.list</field>
            <field name="model">library.book.copy</field>
            <field name="arch" type="xml">
                <tree string="Book Copy List">
                    <field name="name"/>
                    <field name="internal_reference"/>
                    <field name="book_id"/>
                    <field name="description"/>
                    <field name="genre"/>
                    <field name="authors"/>
                    <field name="edition_year"/>
                    <field name="isbn"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>