<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="book_view_form">
            <field name="name">book.view.form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Book Form">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="description"/>
                                <field name="genre"/>

                            </group>
                            <group>
                                <field name="edition_year"/>
                                <field name="isbn"/>
                                <field name="authors"/>
                                <field name="editors"/>
                                <field name="publisher"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="book_view_list">
            <field name="name">book.view.list</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree string="Book List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="genre"/>
                    <field name="authors"/>
                    <field name="edition_year"/>
                    <field name="isbn"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="book_view_search">
            <field name="name">book.view.search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="authors"/>
                    <field name="isbn"/>
                </search>
            </field>

        </record>

    </data>
</odoo>