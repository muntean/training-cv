<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="rental_view_form">
            <field name="name">rental.view.form</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <form string="Rental Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="customer_id"/>
                            </group>
                            <group>
                                <field name="rental_date_start"/>
                                <field name="rental_date_end"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Books">
                                <field name="book_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="rental_view_list">
            <field name="name">rental.view.list</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <tree string="Rental List">
                    <field name="customer_id"/>
                    <field name="rental_date_start"/>
                    <field name="rental_date_end"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>