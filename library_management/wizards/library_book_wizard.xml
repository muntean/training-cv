<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="library_wizard_form_view">
            <field name="name">library.book.wizard.form</field>
            <field name="model">library.book.wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard : View the customer rented books">
                    <group>
                        <field name="customer_id"/>
                    </group>
                    <group>
                        <field name="display_books" invisible="1"/>
                        <field name="book_ids" attrs="{'invisible': [('display_books', '=', False)]}" readonly="True"/>
                        <field name="display_no_books_message" invisible="1"/>
                        <field name="no_books_message" attrs="{'invisible': [('display_no_books_message', '=', False)]}"
                               readonly="True" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="check_rented_books" type="object" string="Check" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="launch_library_book_wizard" model="ir.actions.act_window">
            <field name="name">Check Rented Books</field>
            <field name="res_model">library.book.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
        </record>


    </data>
</odoo>